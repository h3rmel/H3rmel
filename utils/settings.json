{
  // Open json editor for settings
  "workbench.settings.editor": "json",

  // File Saving
  "files.autoSave": "onFocusChange",

  // Theme
  "workbench.colorTheme": "GitHub Dark",
  "workbench.iconTheme": "symbols",
  "workbench.productIconTheme": "fluent-icons",
  "symbols.hidesExplorerArrows": false,

  //
  // Font
  //

  // Family
  "editor.fontFamily": "JetBrainsMono Nerd Font Mono",
  "scm.inputFontFamily": "JetBrainsMono Nerd Font Mono",
  "terminal.integrated.fontFamily": "JetBrainsMono Nerd Font Mono",
  "chat.editor.fontFamily": "JetBrainsMono Nerd Font Mono",
  "debug.console.fontFamily": "JetBrainsMono Nerd Font Mono",
  "editor.codeLensFontFamily": "JetBrainsMono Nerd Font Mono",
  "notebook.output.fontFamily": "JetBrainsMono Nerd Font Mono",
  "markdown.preview.fontFamily": "JetBrainsMono Nerd Font Mono",
  "editor.inlayHints.fontFamily": "JetBrainsMono Nerd Font Mono",

  // Font (Size & Weight)
  "editor.fontSize": 14,
  "terminal.integrated.fontSize": 14,
  "editor.fontWeight": "400",
  "terminal.integrated.fontWeight": "400",

  // Others
  "editor.lineHeight": 1.8,
  "editor.letterSpacing": 1,
  "editor.cursorStyle": "block",
  // "editor.rulers": [80, 120],

  //
  // Ui
  //

  // Window
  "window.commandCenter": false,
  "window.titleBarStyle": "custom",
  "window.zoomLevel": 1,

  // Editor
  "editor.minimap.enabled": false,
  "editor.scrollbar.vertical": "auto",
  "editor.scrollbar.horizontal": "auto",
  "editor.fontLigatures": true,
  "editor.linkedEditing": true,
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.smoothScrolling": true,
  "editor.cursorBlinking": "smooth",
  "editor.inlayHints.fontSize": 12,
  "editor.stickyScroll.enabled": true,
  "editor.renderLineHighlight": "gutter",
  "editor.semanticHighlighting.enabled": false,
  "editor.tabSize": 2,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "diffEditor.ignoreTrimWhitespace": false,

  // Workbench
  "workbench.list.smoothScrolling": true,
  "workbench.tree.indent": 16,
  "workbench.startupEditor": "none",
  "workbench.editor.labelFormat": "short",
  "workbench.layoutControl.enabled": false,

  // Terminal
  "terminal.integrated.smoothScrolling": true,

  //
  // Explorer
  //

  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.expand": true,
  "explorer.compactFolders": false,
  "explorer.fileNesting.patterns": {
    "*.ts": "${capture}.spec.ts, ${capture}.test.ts",
    "*.js": "${capture}.spec.js, ${capture}.test.js",
    "*.jsx": "${capture}.spec.jsx, ${capture}.test.jsx",
    "*.tsx": "${capture}.module.css",
    "tsconfig.json": "tsconfig*",
    "package.json": "package-lock*, yarn*, pnpm-lock*",
    "next.config*": ".eslint*, .prettier*, .lintstaged*, .commitlint*",
    "vite.config*": ".eslint*, .prettier*, .lintstaged*, .commitlint*",
    "tailwind.config*": "postcss*, autoprefixer*",
    "README.md": "${capture}.md",
    "*.css": "${capture}.min.css",
    ".env.local": ".env*",
    ".env": ".env*",
    "*.sqlite": "${capture}.${extname}-*",
    "*.db": "${capture}.${extname}-*",
    "*.sqlite3": "${capture}.${extname}-*",
    "*.db3": "${capture}.${extname}-*",
    "*.sdb": "${capture}.${extname}-*",
    "*.s3db": "${capture}.${extname}-*"
  },

  //
  // JavaScript & TypeScript
  //

  // Configs
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "javascript.preferences.renameMatchingJsxTags": true,
  "typescript.preferences.renameMatchingJsxTags": true,
  "javascript.autoClosingTags": true,
  "typescript.autoClosingTags": true,

  // Inlay Hints (for TS)
  "typescript.inlayHints.parameterNames.enabled": "all",
  "typescript.inlayHints.parameterNames.suppressWhenArgumentMatchesName": true,
  "typescript.inlayHints.variableTypes.enabled": true,
  "typescript.inlayHints.variableTypes.suppressWhenTypeMatchesName": true,
  "typescript.inlayHints.propertyDeclarationTypes.enabled": true,
  "typescript.inlayHints.parameterTypes.enabled": true,
  "typescript.inlayHints.functionLikeReturnTypes.enabled": true,
  "typescript.inlayHints.enumMemberValues.enabled": true,

  // Enable/Unable
  "editor.inlayHints.enabled": "offUnlessPressed",

  //
  // APC
  //

  // "apc.activityBar": {
  //   "hideSettings": true,
  //   "size": 48
  // },
  // "apc.electron": {
  //   "titleBarStyle": "hiddenInset",
  //   "trafficLightPosition": {
  //     "x": 12,
  //     "y": 10
  //   }
  // },
  "apc.font.family": "JetBrainsMono Nerd Font Mono",
  "apc.monospace.font.family": "JetBrainsMono Nerd Font Mono",
  "apc.statusBar": {
    "position": "editor-bottom",
    "height": 24,
    "fontSize": 12
  },

  // Custom css
  "apc.stylesheet": {
    ".sidebar > .composite > .title-actions": "display: none !important",
    ".tabs-and-actions-container > .editor-actions": "display: none !important",
    "ul.actions-container > li.action-item.menu-entry": "display: none !important",
    ".monaco-workbench .part.sidebar>.title": "display: none !important",
    ".monaco-pane-view .split-view-view:first-of-type>.pane>.pane-header": "height: 34px",
  }
}
